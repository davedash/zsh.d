# prompt (if running screen, show window #)
if [ x$WINDOW != x ]; then
    export PS1="$WINDOW:%m:%~%# "
else
    export PS1='%m:%~ %# '
fi

get_prompt() {
    if [[ -n $(get_git_prompt_info) ]]; then
        echo "(%{$fg_bold[green]%}$(get_git_prompt_info)%{$reset_color%})"
    else
        echo " "
    fi
}
RPROMPT='$(get_prompt)'
